<h1>Let's Create a New Figure!</h1>

<form method="POST" action="/figures">

  <label for="figure_name">Name: </label>
  <input type="text" id="figure_name" name="figure[name]">

  <br><br>

  <p><strong> Choose a title: </strong></p>
  <% Title.all.each do |title| %>
    <label for="title_<%= title.id %>"><%= title.name %></label>
    <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>">
  <% end %>

  <br><br>

  <p><strong> Or, create a title: </strong></p>
  <label for="new_title">New Title: </label>
  <input type="text" name="title[name]" id="new_title">

  <br><br>

  <p><strong>Choose a landmark: </strong></p>
  <% Landmark.all.each do |landmark| %>
    <label for="landmark_<%= landmark.id %>"><%= landmark.name %></label>
    <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>">
  <% end %>

  <br><br>

  <p><strong>Or, create a landmark: </strong></p>
  <label for="new_landmark">New Landmark: </label>
  <input type="text" name="landmark[name]" id="new_landmark">
  <label for="year">Year: </label>
  <input type="text" name="landmark[year_completed]" id="year">

  <br><br>

  <input type="submit" value="Create New Figure">

</form>
