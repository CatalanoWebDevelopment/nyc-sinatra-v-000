<h1>Edit <%= @figure.name %></h1>

<form method="POST" action="/figures/<%= @figure.id %>">
  <label for="figure_name">New Name: </label>
  <input type="text" id="figure_name" value="<%= @figure.name %>" name="figure[name]">

  <br><br>

  <label>Select a Title: </label>
  <% Title.all.each do |title| %>
    <label for="<%= title.name %>"><%= title.name %></label>
    <input type="checkbox" name="figure[title_ids][]" id="<%= title.name %>" value="<%= title.id %>" <%= 'checked' if @figure.titles.include?(title) %>>
  <% end %>

  <br><br>

  <label>Or, Create a New Title: </label>
  <input type="text" name="title[name]" id="new_title">

  <br><br>

  <label>Select a Landmark: </label>
  <% Landmark.all.each do |landmark| %>
    <label for="<%= landmark.name %>"><%= landmark.name %></label>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= landmark.name %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>>
  <% end %>

  <br><br>

  <label>Or, Create a New Landmark: </label>
  <input type="text" name="landmark[name]" id="new_landmark">

  <br><br>

  <input type="submit" value="Edit Figure">

</form>
